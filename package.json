{
  "name": "website",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "dev:host": "vite --port 3000 --host",
    "build": "pnpm i18n:compile && tsc -b && vite build",
    "lint": "pnpm exec prettier . --write && pnpm exec eslint . --fix",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "i18n:extract": "lingui extract",
    "i18n:compile": "lingui compile --typescript",
    "prepare": "husky"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@lingui/cli": "^5.3.1",
    "@lingui/core": "^5.3.1",
    "@lingui/react": "^5.3.1",
    "@lingui/vite-plugin": "^5.3.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "prettier": "3.5.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lingui extract $(git diff --name-only --staged)"
    }
  }
}
